{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/story",
      "dest": "/api/story.js"
    },
    {
      "src": "/api/generateStory",
      "dest": "/api/generateStory.js"
    },
    {
      "src": "/api/checkAnswer",
      "dest": "/api/checkAnswer.js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
